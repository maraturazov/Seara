<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<widget id="com.searasports.seara" version="2.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>Seara</name>
  <description>
      Presentation builder app for Seara
  </description>
  <author email="developer@searasports.com">
      developer@searasports.com
  </author>
  <content src="index.html"/>
  <access origin="*"/>
  <preference name="webviewbounce" value="false"/>
  <preference name="UIWebViewBounce" value="false"/>
  <preference name="DisallowOverscroll" value="true"/>
  <preference name="android-minSdkVersion" value="16"/>
  <preference name="BackupWebStorage" value="none"/>
  <preference name="iosPersistentFileLocation" value="Library"/>
  <preference name="AutoHideSplashScreen" value="false"/>
  <preference name="orientation" value="landscape"/>
  <preference name="fullscreen" value="false"/>
  <preference name="SplashScreen" value="screen"/>
  <preference name="SplashScreenDelay" value="3000"/>
  <preference name="StatusBarOverlaysWebView" value="false" />
  <preference name="StatusBarStyle" value="lightcontent" />
  <preference name="StatusBarBackgroundColor" value="#000000" />

  <!-- <gap:splash gap:platform="ios" src="www/images/SplashScreens/2048x1536.png" width="480" height="320"/> -->
  <!-- <gap:splash gap:platform="ios" src="www/images/SplashScreens/2048x1536.png" width="1024" height="768"/> -->
  <!-- <gap:splash gap:platform="ios" src="www/images/SplashScreens/2048x1536.png" width="2048" height="1536"/> -->
  
  <platform name="ios">
    <icon src="www/images/App Icons/Resized/57.png" width="57" height="57"/>
    <icon src="www/images/App Icons/Resized/72.png" width="72" height="72"/>
    <icon src="www/images/App Icons/Resized/114.png" width="114" height="114"/>
    <icon src="www/images/App Icons/Resized/144.png" width="144" height="144"/>
    <splash src="www/images/SplashScreens/1024x768.png" width="480" height="320"/>
    <splash src="www/images/SplashScreens/1024x768.png" width="1024" height="768"/>
    <splash src="www/images/SplashScreens/2048x1536.png" width="2048" height="1536"/>
  </platform>

  <platform name="android">
    <icon src="www/images/App Icons/Resized/57.png" width="57" height="57"/>
    <icon src="www/images/App Icons/Resized/72.png" width="72" height="72"/>
    <icon src="www/images/App Icons/Resized/114.png" width="114" height="114"/>
    <icon src="www/images/App Icons/Resized/144.png" width="144" height="144"/>
    <splash src="www/images/SplashScreens/1024x768.png" width="480" height="320"/>
    <splash src="www/images/SplashScreens/1024x768.png" width="1024" height="768"/>
    <splash src="www/images/SplashScreens/2048x1536.png" width="2048" height="1536"/>
  </platform>

  <feature name="InAppBrowser">
    <param name="ios-package" value="CDVInAppBrowser"/>
    <param name="android-package" value="org.apache.cordova.inappbrowser.InAppBrowser"/>
  </feature>
  <feature name="StatusBar">
    <param name="ios-package" value="CDVStatusBar" />
    <param name="onload" value="true" />
  </feature>
</widget>